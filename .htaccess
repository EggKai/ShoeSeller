# Enable URL rewriting
RewriteEngine On

RewriteBase /ShoeSeller/

ErrorDocument 403 /ShoeSeller/public/error/403.html
ErrorDocument 500 /ShoeSeller/public/error/500.html

# Redirect base URL (e.g., /ShoeSeller/) to public/index.php
RewriteCond %{REQUEST_URI} ^/shoeseller/?$ 
RewriteRule ^$ public/index.php [L]

Options -Indexes
# If the requested file or directory exists, do nothing
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Otherwise, rewrite the request to index.php and pass the path as 'url'
RewriteRule ^(.*)$ public/index.php?url=$1 [QSA,L]